<div class="user_forms_container">
  <div class='row justify-content-center'>
    <div class="col-6"> 

      <%= simple_form_for [@property, @tax_history] do |f| %>
      <%= f.input :year, as: :string, html5: true %>
      <%= f.input :value %>
      <%= f.input :tax %>
      <%= f.submit "Submit Taxes", class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div>
</div>