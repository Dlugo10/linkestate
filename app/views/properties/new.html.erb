<h1 style="color:#1BB580; font-weight: 700;" class="border-bottom">List Your Property</h1>
<h4 style="display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    margin-top: 29px;
    color:#1BB580">Please fill out the entire form for more reach</h4>
<div class="container-user-form">
  <div class= 'divider'>
    <div class='row justify-content-center'>
      <div class="col-6" style="margin: 34px">

        <%= simple_form_for [@property] do |f| %>
        
          <%= f.input :title %>
        
          <%= f.input :price, as: :integer %>
        
          <%= f.input :address %>

          <%= f.input :propery_type, :collection => %w[Condo House Apartment Town House] %>
          
      
          <%= f.input :bedrooms %>
          <%= f.input :bathrooms %>

        
          <h3 class="border-bottom"></h3>
        
        
          <%= f.input :sq_meters %>
        
          <%= f.input :sq_meters_land %>
        
          <%= f.input :year_bought %>
        
          <%= f.input :price_bought %>
        
          <%= f.input :sq_meters_added %>
        
          <%= f.input :year_built %>
        
          <%= f.input :year_renovated %>
        
          <h3 class="border-bottom"></h3>
        
          <div class='booleans'>
            <%= f.input :beachfront %>
          
            <%= f.input :waterfront %>
        
            <%= f.input :pool %>
          
            <%= f.input :central_air %>
          
            <%= f.input :dishwasher %>
          
            <%= f.input :washing_machine %>
          
            <%= f.input :attached_garage %>
          </div>

            <%= f.input :photos, as: :file, input_html: { multiple: true }, style:"btn btn-primary" %>
            
          <div ><%= f.submit "Create Property", class:"btn btn-ghost", style:"border-radius: 29px;
                  border-color: #70A37F;
                  background-color: #1BB580;
                  color: white;
                  justify-content:center;
                  margin-top:16px;
                  margin-left: 150px;" %> 
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
